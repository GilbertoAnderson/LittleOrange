@model TheLittleOrangeChannel.Models.tblPrestador

@{
    ViewBag.Title = "Forma Pagamento";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="bg-fundo">
            <div class="row">
                <div class="col-md-8">
                    <h3> @Html.DisplayFor(model => model.Empresa) </h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <h5> Fone: @Html.DisplayFor(model => model.Celular) </h5>
                </div>
                <div class="col-md-10">
                    <h5>indicado por - @ViewBag.IndicadoPor do @ViewBag.Condominio de @ViewBag.Cidade - @ViewBag.Estado</h5>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <h5>Escolha a forma de pagamento</h5>
                </div>
                <div class="col-md-10">
                    <h4>@ViewBag.Abrangencia - @ViewBag.Plano - @ViewBag.ValorPlanoTotal</h4>
                </div>
            </div>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.idPrestador)
            @Html.HiddenFor(model => model.idAbrangencia)
            @Html.HiddenFor(model => model.idPlano)
            @Html.HiddenFor(model => model.idFormaPagto)


            <div class="row">
                <div class="col-md-2">
                    &nbsp;
                </div>
                <div class="col-md-8">

                    <a href='@Url.Action("Pagamento",  new { id = ViewBag.id,tipoAbrangencia = ViewBag.Abrangencia , tipoPlano = ViewBag.Plano, valor = ViewBag.ValorPlano,  formaPagto="Boleto"})' class="list-group-item list-group-item-action list-group-item-orange">
                        <h4>Boleto</h4>
                        Seu boleto para o próximo dia útil<br />
                        <i>(sua abrangencia somente será liberada após compensar o boleto)</i>
                    </a>

                    <a href='@Url.Action("Pagamento",  new { id = ViewBag.id,tipoAbrangencia = ViewBag.Abrangencia , tipoPlano = ViewBag.Plano,valor = ViewBag.ValorPlano, formaPagto="Credito"})' class="list-group-item list-group-item-action list-group-item-orange">
                        <h4>Cartão Crédito</h4>
                        @if (@ViewBag.Plano != "Mensal")
                        {
                            <i>(pode ser dividido pelo PagSeguro em 6 vezes)</i><br /><br />
                        }
                        else
                        {
                            <h5>Esta cobrança será recorrente</h5>
                            <i>(este valor será debito todo mês do seu cartão de crédito)</i><br />
                        }
                    </a>

                    <a href='@Url.Action("Pagamento",  new { id = ViewBag.id,tipoAbrangencia = ViewBag.Abrangencia , tipoPlano = ViewBag.Plano, valor = ViewBag.ValorPlano, formaPagto="PIX"})' class="list-group-item list-group-item-action list-group-item-orange">
                        <h4>PIX</h4>
                        <i>(enviar chave do PIX)</i><br /><br />
                    </a>

                </div>
                <div class="col-md-2">
                    &nbsp;
                </div>
            </div>

    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


