@model TheLittleOrangeChannel.Models.tblPrestador

@{
    ViewBag.Title = "Envio PagSeguro";
}




@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="bg-fundo">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-8">
                    <h3> @Html.DisplayFor(model => model.Empresa) </h3>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <h5> Fone: @Html.DisplayFor(model => model.Celular) </h5>
                </div>
            </div>
           
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.idPrestador)
            @Html.HiddenFor(model => model.idAbrangencia)
            @Html.HiddenFor(model => model.idPlano)
            @Html.HiddenFor(model => model.idFormaPagto)


            <div class="row">
                <div class="col-md-2">
                    &nbsp;
                </div>
                <div class="col-md-8">
                    <a href='@Url.Action("Menu")' class="list-group-item list-group-item-action list-group-item-orange">
                        <h1>@ViewBag.msg</h1>
                    </a>
                    <br />
                </div>
                <div class="col-md-2">
                    &nbsp;
                </div>
            </div>

        </div>
    </div>
}


