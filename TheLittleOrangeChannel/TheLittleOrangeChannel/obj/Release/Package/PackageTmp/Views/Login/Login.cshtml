@model TheLittleOrangeChannel.Models.tblUsuario
@{
    ViewBag.Title = "Canal";
}


<div class="bg-fundo">
    <div class="loginForm">

        <section id="loginForm">
            @using (Html.BeginForm("Login", "Login", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-12">
                        <h2>@ViewBag.Title</h2>
                        <h4>Relacionamento com o Cliente</h4>
                    </div>
                </div>

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    @Html.LabelFor(m => m.Email, "e-mail", new { @class = "col-md-1 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="row">
                    &nbsp;
                </div>

                <div class="row">
                    @Html.LabelFor(m => m.Senha, new { @class = "col-md-1 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Senha, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Senha, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    &nbsp;
                </div>


                <div class="row">
                    <div class="col-md-12">
                        <input type="submit" value="Entrar" class="btn btn-warning btn-lg" />
                    </div>
                </div>
            }
        </section>
        </div>

</div>



    @section Scripts
{

        @Scripts.Render("~/bundles/bootstrap")

        @Scripts.Render("~/bundles/jqueryval")

        <script type="text/javascript">

            $(document).ready(function () {


            });


        </script>
    }
